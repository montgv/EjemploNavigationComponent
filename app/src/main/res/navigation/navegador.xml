<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegador"
    app:startDestination="@id/inicioFragment">

    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.example.ejemplonavigationcomponent.Fragmentos.InicioFragment"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_inicioFragment_to_segundoFragment"
            app:destination="@id/segundoFragment" />
        <argument
            android:name="texto"
            app:argType="string" />
        <argument
            android:name="numero"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/segundoFragment"
        android:name="com.example.ejemplonavigationcomponent.Fragmentos.SegundoFragment"
        android:label="fragment_segundo"
        tools:layout="@layout/fragment_segundo" >
        <action
            android:id="@+id/action_segundoFragment_to_finalFragment"
            app:destination="@id/finalFragment" />
        <argument
            android:name="texto"
            app:argType="string" />
        <argument
            android:name="numero"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/finalFragment"
        android:name="com.example.ejemplonavigationcomponent.Fragmentos.finalFragment"
        android:label="fragment_final"
        tools:layout="@layout/fragment_final" >
        <action
            android:id="@+id/action_finalFragment_to_inicioFragment"
            app:destination="@id/inicioFragment" />
    </fragment>
</navigation>